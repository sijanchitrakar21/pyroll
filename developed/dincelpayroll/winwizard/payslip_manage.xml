<?xml version="1.0"?>
<odoo>

		<record id="wizard_payroll_manage_payslip_form" model="ir.ui.view">
            <field name="name">wizard.payslip.manage.form</field>
            <field name="model">hr.payslip.manage</field>
            <field name="arch" type="xml">
                <form >
                    <group>
						<field name="type" required="1"/>
						<field name="check_pdf" invisible="1" colspan="2"/>
					</group>
                      <group>
						
					 <field name="check_all" invisible="1" nolabel="1" colspan="2"/>
					 <field nolabel="1" name="items" >
							 <tree editable="bottom" create="0">
								<field name="selected" />
								<field name="employee_id" />
								<field name="date" />
								<field name="net_amt" />
								<field name="number" />
								<field name="payslip_id" />
							 </tree>
							 
					 </field>
					 </group>
                    <footer>    
						<field name="qty" invisible="1" />
						
						 <button string="Continue" type="object" name="button_manage_continue"/>
						 
						 
                        <button string="Preview Payslips" invisible="1" type="object" name="button_previw_payslips"/>
						
						<button string="Validate/Generate Journals"  invisible="1" type="object" confirm="Are you sure to validate?" name="button_validate_payslips"/>
						
						<button string="Generate Pdfs" type="object" invisible="1" name="button_generate_pdf_payslips"/>
						<button string="Generate PAYEVENT File" invisible="1" type="object" name="button_generate_payevent"/>
						
						<button string="Reverse Payslips" invisible="1" type="object" name="button_reverse_payslips"/>
						
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
		
		
		
		 
 
		 <record id="action_view_manage_payslip" model="ir.actions.act_window">
			<field name="name">Preview / Manage Payslip</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.payslip.manage</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="binding_model_id" ref="hr_payroll.model_hr_payslip" />
		</record>
 
 
		
</odoo>
	