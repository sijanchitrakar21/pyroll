<?xml version="1.0"?>
<odoo>

		<record id="wizard_payslip_queue_form" model="ir.ui.view">
            <field name="name">wizard.payslip.queue.form</field>
            <field name="model">hr.payslip.queue</field>
            <field name="arch" type="xml">
                <form >
                    
                      <group>
              
					 <field name="check_all" invisible="1" nolabel="1" colspan="2"/>
					 <field nolabel="1" name="employee_lines" >
							 <tree editable="bottom" create="0">
								<field name="selected" />
								<field name="employee_id" />
								<field name="date" />
								<field name="net_amt" />
								<field name="number" />
								<field name="payslip_id" />
							 </tree>
							 
					 </field>
					 </group>
                    <footer>    
						<field name="qty" invisible="1" /> <field name="type" invisible="1"/>
					
                        <button name="button_payslip_que_create" type="object"  string="Continue"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
		
	<record id="action_view_queue_generate_payslip" model="ir.actions.act_window">
			<field name="name">Generate Payslip Email Queue</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.payslip.queue</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			
			<field name="binding_model_id" ref="hr_payroll.model_hr_payslip" />
		</record>
 

</odoo>
	