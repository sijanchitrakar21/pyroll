<?xml version="1.0"?>
<odoo>
        <!-- Merge Opportunities  -->
        <record id="wizard_timesheet2payslip_form" model="ir.ui.view">
            <field name="name">wizard.hr.timesheet2payslip.form</field>
            <field name="model">hr.timesheet2payslip</field>
            <field name="arch" type="xml">
                <form >
                    <group >
						<group>
							
							
						
							
							<field name="paydate" required="1"/>
							
							<field name="payfrequency_id" required="1"/>
							<field name="qty" invisible="1"/>
						 </group >
						 
						<group>
						
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							
						</group>
                    </group>
                     
                     <group nolabel="1"   colspan="2"  >
					
					 <field nolabel="1" name="lines"  >
							 <tree editable="bottom" create="0">
							
								<field name="emp_number" />
								<field name="employee_id" />
								<field name="import_id" />
								
							 </tree>
							 
					 </field>
					 </group>
                    <footer>
						
                        <button name="button_ts2payslip_create" type="object"  string="Continue"  />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
 
		<record id="action_view_timesheet2payslip" model="ir.actions.act_window"  >
			<field name="name">Create Payslip</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.timesheet2payslip</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="binding_model_id" ref="dincelpayroll.model_hr_timesheet_import_copy" />
		</record>
 
 
</odoo>
