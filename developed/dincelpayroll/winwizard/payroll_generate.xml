<?xml version="1.0"?>
<odoo>
        <!-- Merge Opportunities  -->
        <record id="wizard_payroll_generate_form" model="ir.ui.view">
            <field name="name">wizard.payroll.generate.form</field>
            <field name="model">hr.payroll.generate</field>
            <field name="arch" type="xml">
                <form >
				 
                    <group >
						<group>
						
							<field name="payfrequency_id" required="1"/>
							
							<field name="is_termination"  invisible="1"/>
							
							<field name="is_timesheet"  invisible="1" />
							
							<field name="payslip_create_type" invisible="1" />
							<field name="employee_id" invisible="1" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
							<field name="employee_ids"  widget="many2many_tags"  attrs="{'invisible': [('individual', '=', False)],'required': [('individual', '=', True)]}" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
							<field name="paydate" required="1"/>
							<field name="notes" nolabel="1" readonly="1"  attrs="{'invisible': [('payslip_create_type', 'in', ['terminate'])]}"/>
							
							<field name="qty" invisible="1"/>
							
							<field name="group_id"  invisible="1"/>
							
						 </group >
						 
						<group>
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							<field name="individual"  attrs="{'invisible': [('payslip_create_type', 'in', ['terminate'])]}"/> 
							
							<field name="upload_new"  attrs="{'invisible': ['|',('payslip_create_type', 'not in', ['timesheet']),('ts_import_only', '=', True)]}" />
							<field name="ts_imort_type"  invisible="1"/> 
							
							<field name="timesheet_file" invisible="1" attrs="{'invisible': [('upload_new', '=', False)]}" />
							<field name="ts_import_only" invisible="1" />
						</group>
                    </group>
                     
                     <group nolabel="1"   colspan="2"  attrs="{'invisible': ['|',('payslip_create_type', 'not in', ['autopay','timesheet']),('individual', '=', True)]}">
							<div colspan="2" ><label for="check_all" string="All" /> <field name="check_all" nolabel="1" colspan="2"  /> </div>
							<div colspan="2" >
								<field nolabel="1" name="employee_lines"  >
								 <tree editable="bottom" create="0"  limit = "200">
									<field name="selected" />
									<field name="sequence" readonly="1"/>
									<field name="emp_number" readonly="1"/>
									<field name="first_name" readonly="1"/>
									<field name="last_name" readonly="1"/>
									<field name="employee_id" invisible="1" />
									<field name="payslip_create_type" invisible="1" />
									<field name="job_id"  readonly="1"/>
									<field name="group_id" readonly="1"/>
								 </tree>
								 
							 </field>
							 </div>
					 </group>
					 <group nolabel="1"   colspan="2"  attrs="{'invisible': ['|',('payslip_create_type', 'not in', ['timesheet']),('ts_import_only', '=', True)]}">
						<div colspan="2" attrs="{'invisible': [('upload_new', '=', True)]}" ><label for="check_all_ts" string="All" /> <field name="check_all_ts" nolabel="1" colspan="2"  /> </div>
						<div colspan="2" attrs="{'invisible': [('upload_new', '=', True)]}" ><field nolabel="1" name="import_lines"  >
								 <tree editable="bottom" create="0"  limit = "200">
									<field name="selected" />
									<field name="import_id"  invisible="1" />
									<field name="import_name"  readonly="1" />
									<field name="date" readonly="1" />
									<field name="date_from" readonly="1" />
									<field name="date_to" readonly="1" />
									
									<field name="emp_number" readonly="1"/>
									<field name="first_name" readonly="1"/>
									<field name="last_name" readonly="1"/>
									<field name="employee_id" invisible="1" />
									
									<field name="job_id"  readonly="1"/>
									<field name="group_id" readonly="1"/>
								 </tree>
								 
					 </field></div>
					 </group>
                    <footer>
                        <button name="button_wiz_payslip_create" type="object"  string="Continue"  attrs="{'invisible': [('payslip_create_type', 'in', ['suspend'])]}"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
 

</odoo>
