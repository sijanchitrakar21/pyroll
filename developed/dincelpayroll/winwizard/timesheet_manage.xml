<?xml version="1.0"?>
<odoo>
        <!-- Merge Opportunities  -->
        <record id="manage_timesheet_form" model="ir.ui.view">
            <field name="name">hr.timesheet.manage.form</field>
            <field name="model">hr.timesheet.manage</field>
            <field name="arch" type="xml">
                <form >
				
				 <group invisible="1">
                    <group >
                        <field name="date" />
						
						<field name="employee_id" required="1"/>
					 
						  <field name="import_id" />
						 </group >
						 
						  <group >
						
							<field name="date_from" required="1"/>
							<field name="date_to" required="1"/>
							
						   </group >
                      </group >
					 <group >
					<field name="line_ids">
						<tree  editable="bottom">
							<field name="name" />
							<field name="date" />
							<field name="time_in" />
							<field name="time_out" />
							<field name="paid_in" />
							<field name="paid_out" />
							<field name="paid_hours" />
							<field name="leave_id" />
						
						</tree>
					
					</field>

					</group>		
					  
                    <footer>
                        
						<button name="action_save_timesheet" type="object" string="Save" class="btn-primary"/>
					
						
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
 

</odoo>
