<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_paysuper_summary_document"> 
	<t t-call="web.external_layout"> 
		<div class="page">
			<h3>
				<span><t if="employee"><span t-esc="report_title" /></t></span>
			</h3>
			 
			<h4>
				Date: <t if="date_from"><span t-esc="date_from" t-field-options='{"format": "dd/MM/yyyy"}'/></t> - <t if="date_till"><span t-esc="date_till" t-field-options='{"format": "dd/MM/yyyy"}'/></t>
			</h4>
			
			<table border="1" class="table table-condensed">
				 <thead>
				 
                        <tr class="text-center">
							
							<th class="text-center">Employee     </th>
							<th class="text-center">Employee No    </th>
							<th class="text-center">Fund</th>
							<th class="text-center">Membership No</th>
							<th class="text-center">Superannuation Category</th>
							<th class="text-center">Amount</th>
							
							
							
							
						 </tr>
                    </thead>
                    <tbody>
					
				    <t t-foreach="lines" t-as="line">
						<tr> 
							<td><span t-esc="line['emp_name']" /></td>
							<td><span t-esc="line['emp_no']" /></td>
							<td><span t-esc="line['super_fund']" /></td>
							<td><span t-esc="line['super_member_no']" /></td>
							
							<td class="text-right">SGC Superannuation</td> 
							
							<td class="text-right"><span t-esc="'{0:,.2f}'.format(line['super_amt'])"/></td>  
							
							
						</tr>
						  <t t-foreach="line['super_list']" t-as="superitem">
							<tr> 
							<td> </td>
							<td> </td>
							<td> </td>
							<td></td>
							
							<td class="text-right"><span t-esc="superitem['super_text']" /></td> 
							
							<td class="text-right"><span t-esc="'{0:,.2f}'.format(superitem['super_amt'])"/></td>  
							</tr>
							 
						  </t>
						<tr> 
						<td class="text-right font-weight-bold" colspan="5" style="font-weight:bold">Employee Total:</td> 
							
							<td class="text-right font-weight-bold" style="font-weight:bold"><span t-esc="'{0:,.2f}'.format(line['super_total'])"/></td>  
							
							
						</tr>
						 
					  </t>
					  <tr> 
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th class="text-right font-weight-bold">Grand Total</th>
							<th class="text-right font-weight-bold"><span t-esc="'{0:,.2f}'.format(summary['tot_super_amt'])"/></th>  
						</tr>
				  
					</tbody>
					
                </table>
				
			</div>
		 </t>
	 
</template>


<template id="report_paysuper_summary">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="dincelpayroll.report_paysuper_summary_document" />
        </t>
    </t>
</template>
 
</odoo>