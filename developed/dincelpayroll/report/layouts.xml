    <!-- Public api: layout to t-call from reports -->
	<template id="dincel_blank_clean_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
   
       <t t-call="dincelpayroll.dincel_blank_layout_clean"><t t-raw="0"/></t>
        
    </template>
	
    <template id="dincel_external_layout">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        
         <t t-call="dincelpayroll.dincel_external_layout_background"><t t-raw="0"/></t>

        
        <!-- <t t-if="company.external_report_layout == 'boxed'">
