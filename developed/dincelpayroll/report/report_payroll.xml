<?xml version="1.0"?>
<odoo>

		<record id="view_payroll_report_main" model="ir.ui.view">
			 <field name="name">hr.payroll.report.main</field>
			 <field name="model">hr.payroll.report</field>
			 <field name="arch" type="xml">
				  <form string="Report Options">
					  <group>
					  <group>
						<field name="date_from" required="1"    />
						
						<field name="individual"  /> 
                        <field name="group_id" invisible="1" attrs="{'invisible': [('individual', '=', True)]}"  options="{'limit': 10, 'no_quick_create': True, 'no_create_edit' : True}"/>
						<field name="group_ids"  widget="many2many_tags" attrs="{'invisible': [('individual', '=', True)],'required': [('individual', '=', False)]}"  options="{'limit': 10, 'no_quick_create': True, 'no_create_edit' : True}"/>
						
						<field name="employee_id"  attrs="{'invisible': [('individual', '=', False)],'required': [('individual', '=', True)]}" options="{'no_quick_create': True, 'no_create_edit' : True}"   />
						<field name="company_id" invisible="1"/>
						<field name="reportcode" invisible="1"  />
						
						</group>
						
						<group>
						<field name="date_till" required="1"    />
						<field name="archived"  /> 
						</group>
						
						</group>
						  
                     <group nolabel="1" colspan="2"  attrs="{'invisible': [('individual', '=', True)]}" >
					 <field name="check_all" nolabel="1" colspan="2"/>
					 <field nolabel="1" name="employee_lines" >
							 <tree editable="bottom" create="0">
								<field name="selected" />
								 
								<field name="emp_number" readonly="1"/>
								<field name="first_name" readonly="1"/>
								<field name="last_name" readonly="1"/>
								<field name="employee_id" invisible="1" />
								
								<field name="job_id"  readonly="1"/>
								<field name="group_id" readonly="1"/>
							 </tree>
							 
					 </field>
					 </group>
					 
					<footer>
						<button name="check_payroll_report" string="Preview" type="object" default_focus="1" class="oe_highlight"/>   
						<button name="csv_payroll_report" string="CSV" type="object"  class="oe_highlight"/>   
						<button name="csv_export_external_app" string="Export for Third Party App" type="object" attrs="{'invisible': [('reportcode', 'not in', ['entitledetails'])]}" class="oe_highlight"/>   
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				   </form>
			 </field>
		</record>
</odoo>
