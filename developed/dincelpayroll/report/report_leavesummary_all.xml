<?xml version="1.0" encoding="utf-8"?>
<odoo>


<template id="report_leavesummary_all_document"> 
	<t t-call="web.external_layout"> 
		
			<div class="page">
			<h3>
				<span>Leave Summary All</span>
			</h3>
			 
			<h4>
				Date: <t if="date_from"><span t-esc="date_from" t-field-options='{"format": "dd/MM/yyyy"}'/></t> - <t if="date_till"><span t-esc="date_till" t-field-options='{"format": "dd/MM/yyyy"}'/></t>
			</h4>
			<table border="1" class="table table-condensed">
					 <thead>
					 
							<tr class="text-center">
							 
								<th>Entitlements</th>
								<th class="text-center">Opening Hours</th>
								<th class="text-center">Hours Accrued</th>
								
								<th class="text-center">Hours Taken</th>
								<th class="text-center">Available Hours</th>
								<th class="text-center">Value</th>
							 </tr>
						</thead>
						<tbody>
			 <t t-foreach="emplines" t-as="empline">
			 
					<t t-set="lines" t-value="empline['lines']"/>
				
						<tr> 
						<td colspan="6"><strong><span t-esc="empline['employee']"/></strong> [<span t-esc="empline['employeeno']"/>]</td>
						 
						</tr>
					
						
					   <t t-foreach="lines" t-as="line">
						<tr> 
						 
						<td><span t-esc="line['name']" /></td>
						<td class="text-right"><span t-esc="line['hrs_open']"/></td>
						<td class="text-right"><span t-esc="line['hrs_accrued']" /></td>
						<td class="text-right"><span t-esc="line['hrs_taken']" /></td>
						<td class="text-right"><span t-esc="line['hrs_balance']" /></td>
						<td class="text-right"><span t-esc="'{0:,.2f}'.format(line['hrs_value'])" /></td>
						</tr>
					  </t>
					  <tr> 
						<td colspan="6"> <hr /></td>
						 
						</tr>
				 
				
				 </t>
				   </tbody>
					</table>
			</div>
		 </t>
	 
</template>


<template id="report_leavesummary_all">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="dincelpayroll.report_leavesummary_all_document" />
        </t>
    </t>
</template>

 

</odoo>
