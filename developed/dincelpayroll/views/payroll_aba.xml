<?xml version="1.0" encoding="utf-8"?>
<odoo>
	 
	
	 <record model="ir.ui.view" id="dincelpayroll_aba_tree">
            <field name="name">Payslip aba tree</field>
            <field name="model">dincelpayroll.aba</field>
            <field name="arch" type="xml">
                <tree create="false">
					<field name="name" />
					<field name="date" />
					<field name="bank_name" />
					<field name="user_id"/>
                   
					
					<field name="line_ids"/> 
                </tree>
            </field>
        </record>
		
		 <record model="ir.ui.view" id="dincelpayroll_aba_form">
            <field name="name">Payslip aba Form</field>
            <field name="model">dincelpayroll.aba</field>
            <field name="arch" type="xml">
                <form create="false">
				 <header>
						<button name="button_download_aba_file" type="object"  string="Download Aba File"/>
					   </header>
					 <sheet>
					
						<group>
						
							  <group>
									<field name="name" readonly="1"/>
									<field name="date" readonly="1"/>
									<field name="downloaded" readonly="1"/>
							 </group>
							  <group>
									<field name="bank_name" readonly="1"/>
									<field name="remitter" readonly="1"/>
									<field name="user_id" readonly="1"/>
							 </group>
						  </group>
						  <group>
							<field name="line_ids" nolabel="1" readonly="1"> 
							 <tree >
								<field name="employee_id" />
								<field name="payslip_id" />
								<field name="amount" sum="Total"/>
								<field name="bank_name"/>
								<field name="bank_acname" />
							   
								<field name="bank_acno" />
							</tree>
						 </field>
						 
					 
						 
						 </group>
					
					  </sheet>
                </form>
            </field>
        </record>
		
		
		
		   
	 
	<record id="action_dincelpayroll_aba" model="ir.actions.act_window">
		<field name="name">Payroll Payslip ABA</field>
		<field name="res_model">dincelpayroll.aba</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	
	</record>
	 
		
	
		
</odoo>
